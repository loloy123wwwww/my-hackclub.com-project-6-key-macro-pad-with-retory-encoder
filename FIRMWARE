import board
from kmk.kmk_keyboard import KMKKeyboard
from kmk.modules.encoder import EncoderHandler
from kmk.scanners.key_matrix import KeysScanner
from kmk.keys import KC

keyboard = KMKKeyboard()

keyboard.matrix = KeysScanner(
    pins=[
        board.GPIO1,  #-SW1
        board.GPIO2,  #-SW2
        board.GPIO4,  #-SW3
        board.GPIO0,  #-SW4
        board.GPIO6,  #-SW5
        board.GPIO7,  #-SW6
    ],
    value_when_pressed=False,
)


encoder = EncoderHandler()
encoder.pins = ((board.GPIO28, board.GPIO29, None),)

#-encoder.
encoder.map = [
    (KC.VOLD, KC.VOLU),
]
keyboard.modules.append(encoder)
#-KEYMAP
keyboard.keymap = [
    [
        KC.LCTL(KC.C),     #-SW1
        KC.LCTL(KC.V),     #-SW2
        KC.MUTE,           #-SW3 
        KC.MPLY,           #-SW4 
        KC.PSCREEN,        #-SW5 
        KC.LCTL(KC.TAB),   #-SW6
    ]
]
if __name__ == '__main__':
    keyboard.go()
